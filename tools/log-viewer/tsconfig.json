{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["ES2020", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./static",
        "rootDir": "./static",
        "declaration": false,
        "noEmit": false
    },
    "include": ["static/**/*.ts"],
    "exclude": ["node_modules"]
}
